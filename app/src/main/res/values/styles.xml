<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="cardViewDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="big_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFF0F2</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:padding">@dimen/general_padding</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
    </style>
</resources>